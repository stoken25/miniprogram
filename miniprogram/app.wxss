.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* common.css */

view {
  box-sizing: border-box;
}

.flex_box {
  display: flex;
  align-items: center;
}

.flex_box_center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.flex_box_between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.flex_box_around {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.flex_2 {
  width: 50%;
}

.flex_3 {
  width: 33%;
}

.flex_4 {
  width: 25%;
}

.flex_5 {
  width: 20%;
}

.blue {
